{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "api": ["node_modules/api"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}